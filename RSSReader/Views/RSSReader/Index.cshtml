@model RSSReaderViewModel
@{
    ViewBag.Title = "Index";
}

<h3>@Model.URL</h3>

@Html.ValidationSummary()

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Title", "Index", new { sort = Model.TitleSortOrder, Model.URL })
            </th>

            <th>
                @Html.ActionLink("Publication Date", "Index", new { sort = Model.PubDateSortOrder, url = Model.URL })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var feed in Model.Feeds)
        {
        <tr>
            <td> <a href="@feed.Link.AbsoluteUri"> @feed.Title</a> </td>
            <td> @Html.DisplayFor(m => feed.PublicationDate)</td>
        </tr>
        }
    </tbody>
</table>